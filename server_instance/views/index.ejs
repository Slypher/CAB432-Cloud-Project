<!doctype html>
<html>

<head>
    <script src='/assets/js/jquery-3.1.1.min.js' type='text/javascript'></script>
    <script src='/assets/js/poll.js' type='text/javascript'></script>
    <link rel='stylesheet' href='/assets/css/tweets.css'>
    <% include header %>
</head>

<body>
    <% include navbar %>

    <div class='container'>
        <div class='jumbotron text-center'>
            <h1><span class='fa fa-twitter'></span> CAB432-Cloud-Project</h1>
        </div>

        

        <div class='col-sm-8 col-sm-offset-2' style='border-radius: 100px;' id='tweet_container'>
            <form>
                <div class='form-group'>
                    <div class='input-group' style='width:100%;'>
                        <span class='input-group-addon'>Queries</span>
                        <input type='text' id='queries' class='form-control' name='queries' value='' placeholder='Separate queries with a comma...'>
                        <span class='input-group-btn'><button class='btn btn-primary' type='submit'>Search</button></span>
                    </div>
                </div>
            </form>

            <% if (typeof tweets != 'undefined') { %>
                <% if (tweets.length === 0) { %>
                    <div class='well media' id='tweet'>
                        <div class='media-left'>
                            <img class='media-object' src='' alt='Generic placeholder image'>
                        </div>
                        <div class='media-body'>
                            <h5 class='media-heading'>@Username</h5>
                            <span id='tweet_text'>
                            No tweets found
                        </span>
                        </div>
                        <div class='media-right'>
                            <span class='fa fa-meh-o'></span>
                            0
                        </div>
                    </div>
                <% } %>
                <% for (var i = 0; i < tweets.length; i++) { %>
                    <% include tweet_template %>
                <% } %>
            <% } %>
        </div>
    </div>
</body>
</html>